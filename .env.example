# Provider selection
TEXT_PROVIDER=claude        # claude | gemini | openai
IMAGE_PROVIDER=gemini       # gemini | openai

# Claude API (Anthropic) — needed if TEXT_PROVIDER=claude
CLAUDE_API_KEY=sk-ant-...

# Gemini API (Google AI Studio) — needed if TEXT_PROVIDER=gemini or IMAGE_PROVIDER=gemini
GEMINI_API_KEY=...

# OpenAI API — needed if TEXT_PROVIDER=openai or IMAGE_PROVIDER=openai
OPENAI_API_KEY=sk-...

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHANNEL_ID=-1001234567890

# GitHub Personal Access Token (for syncing provider.cfg from Streamlit UI)
# Create at: https://github.com/settings/tokens → "repo" scope
GITHUB_TOKEN=ghp_...
